{
  "short_name": "SpareText",
  "name": "Spareroom Message Generator",
  "icons": {
    "16": "spareroom-ext-logo-16.png",
    "48": "spareroom-ext-logo-48.png",
    "128": "spareroom-ext-logo-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://developer.chrome.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 3,
  "version": "0.0.3",
  "action": {
    "default_popup": "index.html",
    "default_title": "Your Extension Name"
  },
  "description": "An extension that allows you to generate contact messages to Spareroom adverts using AI, and based on your preferences."
}